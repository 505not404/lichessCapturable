{
    "manifest_version": 3,
    "name": "Lichess Capturable",
    "description": "Show Capturable Pieces",
    "version": "1.0",
    "action": {
      "default_icon": "assets/logo.png"
    },
    "background":
    {
      "service_worker": "background.js"
    },
    "permissions": ["scripting", "activeTab"],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+B",
          "mac": "Command+B"
        }
      }
    }
  }